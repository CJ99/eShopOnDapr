@using eShopOnDapr.BlazorClient.Basket

@inject CustomerBasket CustomerBasket

<div>
    <a class="esh-basketstatus pt-2 pb-2 @(CustomerBasket.TotalItemCount < 1 ? "is-disabled" : "")" href="basket">
        <div class="esh-basketstatus-image ml-4 mr-1">
            <img src="/images/cart.svg" />
        </div>
        <div class="esh-basketstatus-badge">
            @CustomerBasket.TotalItemCount
        </div>
    </a>
</div>

@code {

    protected override void OnInitialized()
    {
        CustomerBasket.ItemsChanged += (s, e) => StateHasChanged();
    }
}